                    <select class="custom-select d-block w-100" id="state" required="">
                        <option value="">Choose...</option>
                        <option>@Model.Orders.User.Adres1.Miasto</option>
                        <option>California</option>
                    </select>
                    <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="zip">Kod pocztowy/Zip</label>
                    <input type="text" class="form-control" id="zip" placeholder="" required="" value="@Model.Orders.User.Adres1.KodPocztowy">
                    <div class="invalid-feedback">
                        Zip code required.
                    </div>
                </div>
            </div>


        </div>
        <div class="col-md-6 order-md-1">
            <h4 class="mb-3">Adres rozliczeniowy</h4>

            <form asp-controller="Order" asp-action="Checkout2" method="post" class="form-horizontal" role="form">
                <div class="row">
                    <div class="col-md-6 mb-3">

                        <label for="firstName">Imię</label>
                        <input type="text" class="form-control" id="Imie" placeholder="Imię" value="@Model.Orders.User.Imie" required="">
                        <div class="invalid-feedback">
                            Pole Imię jest wymagane.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Nazwisko</label>
                        <input type="text" class="form-control" id="Nazwisko" placeholder="Nazwisko" value="@Model.Orders.User.Nazwisko" required="">
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com" value="@Model.Orders.User.Email">
                    <div class="invalid-feedback">
                        Wprowadz swój e-mail 
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address">Adres</label>
                    <input type="text" class="form-control" id="address" placeholder="Poznań" required="" value="@Model.Orders.User.Adres1.Ulica">
                    <div class="invalid-feedback">
                        Proszę wprowadz twóje miasto.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                    <input type="text" class="form-control" id="address2" placeholder="Apartment or suite" >
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Country</label>
                        <select class="custom-select d-block w-100" id="country" required="">
                            <option value="">Choose...</option>
                            <option>United States</option>
                            <option>Polska</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid country.
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="state">State</label>
                        <select class="custom-select d-block w-100" id="state" required="" >
                            <option value="">Choose...</option>
                            <option>@Model.Orders.User.Adres1.Miasto</option>
                            <option>California</option>
                        </select>
                        <div class="invalid-feedback">
                            Please provide a valid state.
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="zip">Kod pocztowy/Zip</label>
                        <input type="text" class="form-control" id="zip" placeholder="" required="" value="@Model.Orders.User.Adres1.KodPocztowy">
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>
                </div>
                <hr class="mb-4">

                <h4 class="mb-4">Płatność</h4>

                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                        <label class="custom-control-label" for="credit">Karta kredytowa</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required="">
                        <label class="custom-control-label" for="debit">Przelew</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                        <label class="custom-control-label" for="paypal">Gotówka odbiór w Bogucinie ul. Gnieźnieńska 159</label>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Złóż zamówienie</button>

            </form>
        </div>
    </div>
}



