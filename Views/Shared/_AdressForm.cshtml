                        <option value="">Choose...</option>
                        <option>@Model.Orders.User.Adres1.Kraj</option>
                        <option>United States</option>
                        <option>Polska</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid country.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="state">Miasto</label>
                    <select class="custom-select d-block w-100" id="@Model.Orders.User.Adres1.Miasto" name="@Model.Orders.User.Adres1.Miasto"  required="">
                        <option value="">Choose...</option>
